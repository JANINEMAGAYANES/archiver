<% include ../partials/header %>
<script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.min.js"></script>

<h1 style="text-align: center; margin: 30px;">Round <%=user.round%>:</h1>


<div class="container">
    <h5 style="text-align: center; margin: 5px;">Transaction</h5>
    <%=Object.keys(user.white)%>

    <canvas id="white"></canvas>
</div>
<script>
    var ctx = document.getElementById('white').getContext('2d');
    var whitelisted = new Chart(ctx, {
        type: 'doughnut',
        data: {
            labels: ['Whitelisted', 'Blacklist', 'Void'],
            datasets: [{
                label: '<%=user.round%>',
                data: [JSON.stringify(<%=user.white %>), JSON.stringify(<%=user.black %>), JSON.stringify(<%=user.myvoid %>)],
                backgroundColor: [
                    'lightblue',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'lightblue',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            }
        }
    });
</script>



