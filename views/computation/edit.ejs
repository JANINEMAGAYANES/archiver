<% include ../partials/header %>
<div class="container">
    <div class="form-group-row">
        <h1 style="text-align: center; margin: 30px;">Edit <%= transaction.name%></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/computation/admin/arweave/<%=transaction._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="transaction[round]" value="<%=transaction.round%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="transaction[name]" value="<%=transaction.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="transaction[category]"
                        value="<%=transaction.category%>">
                </div>
                <div class="form-group">
                    <div class="form-group">
                        <input class="form-control" type="text" name="transaction[id]" value="<%=transaction.id%>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="transaction[nominated]" value="<%=transaction.nominated%>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="transaction[final]" value="<%=transaction.final%>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="transaction[url]" value="<%=transaction.url%>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="transaction[domain]" value="<%=transaction.domain%>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="transaction[remarks]" value="<%=transaction.remarks%>">
                    </div>

                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>
            </form>
            <a href="/documents">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>